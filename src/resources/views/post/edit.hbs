<div class="mt-4 create-form">
    <h3>Edit post</h3>
    <form class="row g-3 mt-4" action="/post/{{post._id}}?_method=PUT" method="POST">
        <div class="mb-3">  
            <label for="title" class="form-label">Title</label>
            <input type="text" name="title" class="form-control" value="{{post.title}}" id="title" placeholder="Enter keywords...">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" name="description"  class="form-control" value="{{post.description}}" id="description" placeholder="What this post is about?">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input type="text" name="videoId"  class="form-control" value="{{post.videoId}}" id="videoId">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" name="content" id="content" rows="3">{{post.content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
