<div class="mt-4">
    <div class="row">
        {{#each Posts}}
        <a href="/post/{{this.slug}}"  class="col-sm-6 col-lg-4" style="text-decoration: none;">
                <div class="card card-course-item">
                <img src="https://img.youtube.com/vi/{{this.image}}/sddefault.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title}}">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <span class="card-text">{{this.date}}</span>
                    <br>
                </div>
                </div>
        </a>
        {{else}}
            <div class="mt-4">
                Babe, you haven't posted anything yet.
                <a href="/post/create">Post something.</a>
            </div>
        {{/each}}
    </div>
</div>